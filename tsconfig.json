{
  "compilerOptions": {
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "module": "NodeNext"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}